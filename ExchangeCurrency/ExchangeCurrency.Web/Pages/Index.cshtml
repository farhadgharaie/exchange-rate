@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-6">Cryptocurrency to Traditional Currency</h1>
</div>
<br/>
<form method="post" class="row g-3">
    <div class="col-auto">
        <input class="form-control" asp-for="CryptoSymbol" name="cryptoSymbol" placeholder="Input crypto symbol" />
        <span asp-validation-for="CryptoSymbol" class="text-danger"></span>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
<br />
<div>
    @*show list of currency quote*@
    @if (Model.Error != null)
    {
    <div class="alert alert-warning" role="alert">
        @Model.Error
    </div>
    }

    <div>
        @if (Model.CurrencyQuotes != null)
        {
            <div class="alert alert-info" role="alert">
                <label class="form-label">Last Update Time:</label>
                <label class="form-label" style="color:darkblue">@DateTime.Now</label>
            </div>
            <table class="table  table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Currency</th>
                        <th scope="col">Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CurrencyQuotes)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
