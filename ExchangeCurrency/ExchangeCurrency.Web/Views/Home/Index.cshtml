@model ExchangeCurrencyModel

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-6">Cryptocurrency to Fiat Currency</h1>
</div>
<br />
<form method="get" class="row g-3">
    <div class="col-auto">
        <input class="form-control"  name="cryptoSymbol" placeholder="Input crypto symbol" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
<br />
<div>
    @*show list of currency quote*@
    @if (ViewBag.Error != null)
        {
            <div class="alert alert-warning" role="alert">
                @ViewBag.Error
            </div>
        }

    <div>
        @if (Model != null)
        {
        <div class="alert row alert-info" role="alert">
            <div class="col">
                <label class="form-label">Symbol:</label>
                <label class="form-label" style="color:darkblue">@Model.Symbol</label>
            </div>
            <div class="col">
                <label class="form-label">Last Update Time:</label>
                <label class="form-label" style="color:darkblue">@Model.LastUpdateDate</label>
            </div>
        </div>
            <table class="table  table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Currency</th>
                        <th scope="col">Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Exchange)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

